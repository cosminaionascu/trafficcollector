<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="ro.pub.acs.traffic.model">
	<class name="User" table="users">
		<id name="id" column="id">
			<generator class="native"/>
		</id>
		<property name="username" column="username" />
		<property name="password" column="password" />
		<property name="firstname" column="firstname" />
		<property name="lastname" column="lastname" />
		<property name="phone" column="phone" />
		<property name="facebook_token" column="facebook_token" />
		<property name="facebook_expires_in" column="facebook_expires_in" />
		<property name="auth_token" column="auth_token" />
		<property name="auth_expires_in" column="auth_expires_in" />
	</class>	
	
	<class name="Stats" table="stats">
		<id name="id" column="id">
			<generator class="native"/>
		</id>
		<property name="id_user" column="id_user" />
		<property name="server_info" column="server_info" />
		<property name="page" column="page" />
		<property name="type" column="type" />
		<property name="login_date" column="login_date" />
	</class>	
	
	<class name="Location" table="location">
		<id name="id" column="id">
			<generator class="native"/>
		</id>
		<property name="id_user" column="id_user" />
		<property name="name" column="name" />
		<property name="twitter" column="twitter" />
		<property name="speed" column="speed" />
		<property name="facebook" column="facebook" />
		<property name="stop" column="stop" />
		<property name="timestamp" column="timestamp" />
		<property name="lat" column="lat" />
		<property name="lng" column="lng" />
	</class>	
	
		<class name="History" table="history">
		<id name="id" column="id">
			<generator class="native"/>
		</id>
		<property name="id_user" column="id_user" />
		<property name="file" column="file" />
	</class>	
</hibernate-mapping>