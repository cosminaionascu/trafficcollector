<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="ro.pub.acs.traffic.model">
	<class name="User" table="user">
		<id name="id_user" column="id_user">
			<generator class="native" />
		</id>
		<property name="username" column="username" />
		<property name="password" column="password" />
		<property name="firstname" column="firstname" />
		<property name="lastname" column="lastname" />
		<property name="phone" column="phone" />
		<property name="facebook_token" column="facebook_token" />
		<property name="facebook_expires_in" column="facebook_expires_in" />
		<property name="auth_token" column="auth_token" />
		<property name="auth_expires_in" column="auth_expires_in" />
		<property name="uuid" column="uuid" />
	</class>

	<class name="Location" table="location">
		<id name="id_user" column="id_user">
			<generator class="native" />
		</id>
		<property name="speed" column="speed" />
		<property name="timestamp" column="timestamp" />
		<property name="latitude" column="latitude" />
		<property name="longitude" column="longitude" />
	</class>
</hibernate-mapping>